<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/ActionHomeCompact"
    android:fillViewport="false" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp" >

        <LinearLayout
            android:id="@+id/first"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="45dp"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/addMasterPassw"
                style="@style/HomeButton"
                android:drawableTop="@drawable/final_balloon_unlock_green_light"
                android:text="@string/label_create_master_password"
                android:visibility="invisible" />

            <Button
                android:id="@+id/recoverMasterPassw"
                style="@style/HomeButton"
                android:drawableTop="@drawable/final_balloon_lock_green_light"
                android:text="@string/label_recover_master_password"
                android:visibility="invisible" />

            <Button
                android:id="@+id/settings"
                style="@style/HomeButton"
                android:drawableTop="@drawable/final_balloon_gear_green_light"
                android:text="@string/label_settings" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/second"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="50dp"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/help"
                style="@style/HomeButton"
                android:drawableTop="@drawable/final_balloon_interr_green_light"
                android:onClick="onButtonClicker"
                android:text="@string/label_help" />

            <Button
                android:id="@+id/rate"
                style="@style/HomeButton"
                android:drawableTop="@drawable/final_balloon_star_green_light"
                android:onClick="onButtonClicker"
                android:text="@string/label_rate_title" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>